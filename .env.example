# 中国象棋AI系统环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 系统配置
DEBUG=false
LOG_LEVEL=INFO

# 数据路径
DATA_DIR=./data
MODEL_DIR=./models
LOG_DIR=./logs

# 棋盘识别配置
YOLO_MODEL_PATH=./models/chess_board_yolo11.pt
CAPTURE_SAVE_PATH=./data/captures

# AI引擎配置
AI_MODEL_PATH=./models/chess_ai_model.pt
API_HOST=localhost
API_PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./data/chess_ai.db

# GPU配置
CUDA_VISIBLE_DEVICES=0
USE_GPU=true

# 性能配置
MAX_WORKERS=4
BATCH_SIZE=16
MEMORY_LIMIT=2GB